<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org/DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mac.demo.mappers.BoardMapper">

<insert parameterType="com.mac.demo.model.User" id="add">INSERT INTO board(numMac,titleMac,contentsMac,nicknameMac,wdateMac,pcodeMac,typeMac)VALUES(BOARD_NUM.NEXTVAL,#{titleMac},#{contentsMac},#{nicknameMac},SYSDATE,#{pcodeMac},typeMac) </insert>

<select id="getList" resultType="com.mac.demo.model.Board">SELECT * FROM board WHERE typeMac not in(ads,notice) </select>

<select id="getAdsList" resultType="com.mac.demo.model.Board">SELECT * FROM board WHERE typeMac=ads </select>

<select id="getNoticeList" resultType="com.mac.demo.model.Board">SELECT * FROM board WHERE typeMac=notice </select>

<select id="getDetail" resultType="com.mac.demo.model.Board">SELECT * FROM board WHERE numMac=#{numMac} </select>

<update parameterType="com.mac.demo.model.Board" id="edit">UPDATE board SET titleMac=#{titleMac}, contentsMac=#{contentsMac} WHERE numMac=#{numMac} </update>

<delete parameterType="com.mac.demo.model.Board" id="delete">DELETE FROM board WHERE numMac=#{numMac} </delete>

</mapper>